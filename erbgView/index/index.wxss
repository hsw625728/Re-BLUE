/* erbgView/index/index.wxss */
.container {
  margin-top: 10rpx;
  width: 750rpx;
}

.banner {
  width: 750rpx;
  height: 450rpx;
}

.banner image {
  width: 100%;
  height: 450rpx;
}

.bottom-btn {
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 10;
  width: 750rpx;
  height: 100rpx;
  display: flex;
  background: #fff;
}
.search-header {
  top: 0;
  width: 750rpx;
  height: 91rpx;
  display: flex;
  background: #fff;
  border-bottom: 1px solid rgba(0, 0, 0, 0.15);
  padding: 0 31.25rpx;
  font-size: 29rpx;
  color: #333;
}

.search-header .input-box {
  position: relative;
  margin-top: 16rpx;
  float: left;
  width: 0;
  flex: 1;
  height: 59rpx;
  line-height: 59rpx;
  padding: 0 20rpx;
  background: #f4f4f4;
}

.search-header .keywrod{
    position: absolute;
    top: 0;
    left: 40rpx;
    width: 506rpx;
    height: 59rpx;
    padding-left: 30rpx;
}

.m-menu {
  display: flex;
  height: 80rpx;
  width: 750rpx;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
}

.m-menu .item {
  flex: 1;
  display: block;
  padding: 20rpx 0;
}

.m-menu image {
  display: block;
  width: 58rpx;
  height: 58rpx;
  margin: 0 auto;
  margin-bottom: 12rpx;
}

.m-menu text {
  display: block;
  font-family:Times;
  font-size: 24rpx;
  text-align: center;
  margin: 0 auto;
  line-height: 1;
  color: #333;
}

.img-list {
  width: 750rpx;
  height: auto;
  overflow: hidden;
  column-count: 2;
  column-gap:0 ;
  padding : 6.25rpx 6.25rpx 0rpx 0rpx;
}

.img-list .cell {
  margin: 0rpx 0rpx 6.25rpx 6.25rpx;
  -webkit-column-break-inside: avoid;
  overflow: hidden;
}

.img-list .cell .a {
  font-size:0;
}
.img-list .cell .a .img.l{
  width: 100%;
  height: 160rpx;
}

.img-list .cell .a .img.s{
  width: 100%;
  height: 365rpx;
}

.imgv {
  display:flex;
  width: 750rpx;
  height: 125rpx;
  background: rgb(255, 255, 255);
  border-radius: 1rpx;
}

.imgv .img {
  margin:auto auto;
  width: 500rpx;
  height: 64rpx;
}

.bd {
  padding-left: 38rpx;
  height: auto;
  width: 750rpx;
  border-top: 25rpx solid rgba(0, 0, 0, 0);  
  overflow: hidden;
}

.bd .item {
  display: block;
  float: left;
  height: 216rpx;
  width: 144rpx;
  margin-right: 34rpx;
}

.bd .item .last {
  margin-right: 0;
}

.bd .item .icon {
  height: 144rpx;
  width: 144rpx;
}

.bd .item .txt {
  display: block;
  text-align: center;
  font-size: 24rpx;
  color: #333;
  height: 72rpx;
  width: 144rpx;
}

