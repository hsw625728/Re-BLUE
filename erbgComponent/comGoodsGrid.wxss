/* erbgComponent/comGoodsGrid.wxss */

.com-good-grid {
  width: 750rpx;
  height: auto;
  overflow: hidden;
  column-count: 2;
  column-gap:0 ;
  padding : 6.25rpx 6.25rpx 6.25rpx 0rpx;
}

.com-good-grid .cell {
  background: #ffffff;
  border-bottom: 1px solid rgba(0, 0, 0, 0.15);
  border-radius: 5rpx;
  margin : 0rpx 0rpx 6.25rpx 6.25rpx;
  -webkit-column-break-inside: avoid;
  overflow: hidden;
}

.com-good-grid .cell .a {
}
.com-good-grid .cell .a .img{
  width: 100%;
  height: 365rpx;
}
.com-good-grid .cell .a .name{
  display:block;
  margin: 0rpx 0rpx 0rpx 15rpx;
  color: #000000;
  font-size: 26rpx;
}

.com-good-grid .cell .a .issue_price{
  display:block;
  margin: 0rpx 0rpx 0rpx 15rpx;
  color: #aaaaaa;
  text-decoration:line-through;
  font-size: 22rpx;
}

.com-good-grid .cell .a .retail_price{
  display:block;
  margin: 0rpx 0rpx 0rpx 15rpx;
  color: #ff0000; 
  font-size: 26rpx;
}

